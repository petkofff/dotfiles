# general
show-read-articles yes
show-read-feeds yes
auto-reload yes
max-items 50
reload-threads 26
download-retries 4
text-width 80

# color scheme
color listnormal        default black
color listnormal_unread cyan    black
color listfocus         green   black reverse
color listfocus_unread  green   black reverse
color info              cyan    black
color background        white   black
color article           white   black

# some vim bindings
unbind-key g
unbind-key G
unbind-key h
unbind-key j
unbind-key k
unbind-key l
bind-key g home
bind-key G end
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
